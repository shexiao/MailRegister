<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>MailRegisterServlet</servlet-name>
    <servlet-class>com.haotai.mail.MailRegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MailRegisterServlet</servlet-name>
    <url-pattern>/MailRegister</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MailBackServlet</servlet-name>
    <servlet-class>com.haotai.mail.MailBackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MailBackServlet</servlet-name>
    <url-pattern>/MailBackServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MailLogin</servlet-name>
    <servlet-class>com.haotai.mail.MailLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MailLogin</servlet-name>
    <url-pattern>/MailLogin</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>testFilter</filter-name>
    <filter-class>com.haotai.filter.TestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>testFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.haotai.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/MailLogin</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UserAutoLoginFilter</filter-name>
    <filter-class>com.haotai.filter.UserAutoLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserAutoLoginFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
</web-app>